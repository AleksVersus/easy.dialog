# dialog.replic.prv.if
! проверка реплики на соответствие условиям
$args[0] = $args[0]	&	!	идентификатор реплики
$args['source'] = $source_replic[arrpos('$id_replic',$args[0])]
$args['if'] = $func('get.tag.cont',$args['source'],'iffing')
if $args['if']<>'':
	$args['result']=$dyneval("if <<$args['if']>>: $result='true' else $result='false'")
else
	$args['result']='true'
end
$result=$args['result']
